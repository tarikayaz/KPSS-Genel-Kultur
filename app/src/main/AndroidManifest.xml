<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zargidigames.kpssgenelkultur" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LessonsActivity"
            android:label="@string/title_activity_lessons"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".UnitsActivity"
            android:label="@string/title_activity_units"
            android:parentActivityName=".LessonsActivity"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".SubunitsActivity"
            android:label="@string/title_activity_subunits"
            android:parentActivityName=".UnitsActivity"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".TopicActivity"
            android:label="@string/title_activity_topic"
            android:parentActivityName=".SubunitsActivity"
            android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>
